<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head',{ title: 'Agregar Producto' }) %>

  <body class="form">
    <%- include('../partials/header') %>
    <!-- principal -->
    <main class="form__main">
      <h2>Formulario: Agregar Producto</h2>
      <hr />
      <form action="">
        <div class="forms-add">
          <div class="form__box">
            <label for="title"></label>
            <input type="text" name="title" id="title" placeholder="Titulo del curso" value="<%= title %>"/>
          </div>
          <div class="form__box">
            <label for="price">Precio</label>
            <input type="number" name="price" id="price" value="<%= price %>"/>
          </div>
          <div class="form__box">
            <label for="chef">Chef</label>
            <select name="chef" id="chef">
              <option value="" selected hidden>Seleccione..</option>
              <% chefs.forEach(({name}) => { %>
              <option value="<%= name %>"><%= name %></option>
              <% }) %>
            </select>
          </div>
          <div class="form__box">
            <label for="description">Descripcion</label>
            <textarea name="description" id="description"><%= description %></textarea>
          </div>
          <div class="d-flex justify-content-around">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="section" id="new">
                <label class="form-check-label" for="new">
                  Nuevo
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="section" id="sale" >
                <label class="form-check-label" for="sale">
                  Oferta
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="section" id="free" >
                <label class="form-check-label" for="free">
                  Gratis
                </label>
              </div>
          </div>
          <div class="col-12 mb-3">
            <label for="image" class="form-label">Imagen</label>
            <input type="file" class="form-control" id="image" name="image"/>
          </div>
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-dark">Crear curso</button>
          </div>
        </div>
      </form>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>
